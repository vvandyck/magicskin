<h1>New skin</h1>

<% remote_form_for(@skin , :html => {:action => :create_next, :multipart => true}) do |f| %>
  <%= f.error_messages %>
  <div id="skin_properties">
    <p><label for="skin_name">name</label><br/>
    <%= text_field 'skin', 'name'  %></p>
    <p><label for="skin_width">width</label><br/>
    <%= text_field 'skin', 'width', :size=>10 %></p>
    <p><label for="skin_height">height</label><br/>
    <%= text_field 'skin', 'height', :size=>10 %></p>
  </div>
  <p>
    <%= button_to 'create skin' %>
  </p>

<% end %>

<%= link_to 'Back', skins_path %>
